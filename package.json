  "main": "./dist/module/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "templates"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "esmodules": true
          }
        }
      ]
    ]
  },
  "scripts": {
    "build": "nuxt-ts build",
    "clean": "rimraf dist",
    "dev": "nuxt-ts demo",
    "heroku-postbuild": "nuxt-ts build demo",
