    "@types/jest": "latest",
    "@types/node": "latest",
    "@types/puppeteer": "latest",
    "babel-jest": "latest",
    "bootstrap-vue": "latest",
    "cookie-parser": "latest",
    "eslint": "latest",
    "express": "latest",
    "express-jwt": "latest",
    "get-port": "latest",
    "jest": "latest",
    "jsdom": "latest",
    "lodash.get": "latest",
    "nuxt-edge": "latest",
    "puppeteer": "latest",
    "rimraf": "^3.0.2",
    "standard-version": "latest",
